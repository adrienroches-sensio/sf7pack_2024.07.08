{% extends 'base.html.twig' %}

{% block title %}Hello VolunteerController!{% endblock %}

{% block body %}
    <div class="container flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title">
                            <h1 class="fw-bold" style="color: limegreen;">{{ volunteer.event.name }}</h1>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between mt-4">
                                <div>
                                    <p>From <span
                                                class="fw-semibold">{{ volunteer.startAt|date('d/m/y') }}</span> to
                                        <span class="fw-semibold">{{ volunteer.endAt|date('d/m/y') }}</span></p>
                                    <p class="my-0">Event: <a href="{{ path('app_event_show', {id: volunteer.event.id}) }}">{{ volunteer.event.name }}</a></p>
                                    {% set project = volunteer.project is not null ? volunteer.project : volunteer.event.project %}
                                    {% if project is not null %}
                                        <p class="my-0">Project: <a href="{{ path('app_project_show', {id: project.id}) }}">{{ project.name }}</a></p>
                                    {% endif %}
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
